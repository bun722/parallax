{
    "name": "placas",
    "version": "1.0.0",
    "main": "index.html",
    "license": "MIT",
    "scripts": {
        "predev": "rimraf dist",
        "dev": "run-p watch:*",
        "watch:server": "browser-sync start -s dist -w src/**/*",
        "watch:ejs": "chokidar \"src/ejs/\" -c \"npm run compile:ejs\" --initial",
        "watch:scss2cssprefix": "chokidar \"src/assets/scss/\" --command \"npm run compile:scss2cssprefix\" --initial",
        "watch:img": "cpx src/assets/images/**/* dist/assets/img/ --watch",
        "watch:vendor-js": "cpx src/assets/js/vendor/**/* dist/assets/js/vendor/ --watch",
        "compile:ejs": "ejs-cli -b src/ejs/ /**/*.ejs -e common/ -o dist/",
        "compile:css2cssprefix": "postcss dist/assets/css/**/*.css -u autoprefixer --dir dist/assets/css/ --no-map",
        "compile:scss2css": "sass src/assets/scss/:dist/assets/css --style=expanded --no-source-map",
        "compile:scss2cssprefix": "run-s compile:scss2css compile:css2cssprefix",
        "copy:img": "cpx src/assets/images/**/* dist/assets/images/",
        "copy:vendor-js": "cpx src/assets/js/vendor/**/* dist/assets/js/vendor/",
        "stylelint": "stylelint src/assets/scss/**/*",
        "stylelint:fix": "stylelint --fix src/assets/scss/**/*",
        "format": "prettier --check src",
        "format:fix": "prettier --write src",
        "lint": "run-s stylelint format",
        "lint:fix": "run-s stylelint:fix format:fix"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.19",
        "browser-sync": "^3.0.2",
        "chokidar-cli": "^3.0.0",
        "cpx": "^1.5.0",
        "ejs-cli": "^2.2.3",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.38",
        "postcss-cli": "^11.0.0",
        "postcss-scss": "^4.0.9",
        "prettier": "^3.3.2",
        "rimraf": "^5.0.7",
        "sass": "^1.77.5",
        "stylelint": "^16.6.1",
        "stylelint-config-standard-scss": "^14.0.0",
        "stylelint-order": "^6.0.4",
        "stylelint-prettier": "^5.0.0",
        "stylelint-scss": "^6.3.1"
    }
}
